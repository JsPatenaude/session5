
public class Server {
	private int port;
	private String ip;
	
	public Server() {
		this.port = 5000;
		this.ip = "0.0.0.0";
	}
	
	public Server(int port, String ip) {
		this.setPort(port);
		this.setIp(ip);
	}
	
	public int getPort() {
		return this.port;
	}

	// Set port if valid
	// Return true if valid port, or false if not valid
	public boolean setPort(int port) {
		if (port >= 5000 && port <= 5050) {
			this.port = port;
			return true;
		}
		return false;
	}
	
	public String getIp() {
		return this.ip;
	}

	// Set ip address if valid
	// Return true if valid ip address, or false if not valid
	public boolean setIp(String ip) {
		final String IP_PATTERN = "^((0|1\\d?\\d?|2[0-4]?\\d?|25[0-5]?|[3-9]\\d?)\\.){3}(0|1\\d?\\d?|2[0-4]?\\d?|25[0-5]?|[3-9]\\d?)$";
		if (ip.matches(IP_PATTERN)) {
			this.ip = ip;
			System.out.println("ok");
			return true;
		}
		System.out.println("no");
		return false;
	}
	
	
	public static void main(String[] args) {
		Server s = new Server(5000, "1.1.1.1");
		Server c = new Server(5000, "0.1.1.1");
		Server z = new Server(5000, "255.255.255.255");
		System.out.println("not ok--------");
		Server a = new Server(5000, "1.1.1");
		Server b = new Server(5000, "256.1.1.1");
		Server d = new Server(5000, "1.1.1.1.1");
		Server e = new Server(5000, "a.1.1.1");
		Server f = new Server(5000, "2575.255.255.255");
		Server g = new Server(5000, "2y5.255.255.255");
		Server h = new Server(5000, "25.255 5.255");
		Server i = new Server(5000, "25.2{5.5.255");
		Server j = new Server(5000, "25.2\5.5.255");
		
	}

	
}

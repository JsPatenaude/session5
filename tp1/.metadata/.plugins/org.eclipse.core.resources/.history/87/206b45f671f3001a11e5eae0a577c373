
public class Server {
	private int port = 5000;
	private String ip = "0.0.0.0";
	
	public int getPort() {
		return this.port;
	}

	// Set port if valid
	// Return true if valid port, or false if not valid
	public boolean setPort(int port) {
		if (port < 5000 || port > 5050) {
			return false;
		}
		this.port = port;
		return true;
	}
	
	public String getIp() {
		return this.ip;
	}

	// Set ip if valid
	// Return true if valid ip, or false if not valid
	public boolean setIp(String ip) {
		if (port > 5050 || port < 5000) {
			return false;
		}
		this.ip = ip;
		return true;
	}
	
	
	
	
	
	public boolean portValidation(int portToValidate) {
		
		return true;
	}
	
	public boolean IPValidation() {
		return false;
	}
	
	
	public static void main(String[] args) {
		System.out.println("Hello");
	}

	
}
